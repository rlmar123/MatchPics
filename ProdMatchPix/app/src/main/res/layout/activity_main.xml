<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3342f"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geostar_fill"
        android:text="Score : 0000"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@id/score_text"
        android:fontFamily="@font/geostar_fill"
        android:text="00:00"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <GridLayout
        android:id="@+id/image_grid"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text">

        <ImageView
            android:id="@+id/image_0"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_5"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_6"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_7"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_8"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_9"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_10"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_11"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </GridLayout>

    <Button
        android:id="@+id/time_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_grid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-8dp" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_grid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="207dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/time_button" />

</RelativeLayout>