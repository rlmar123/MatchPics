<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3342f"
    tools:context=".CameraActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="161dp"
        android:layout_height="104dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:background="#e3342f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/film_reel" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="124dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/pic_button_0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/night_king" />

        <ImageView
            android:id="@+id/pic_button_1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/darth_vader" />

        <ImageView
            android:id="@+id/pic_button_2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/the_joker" />

        <ImageView
            android:id="@+id/pic_button_3"
            android:scaleType="fitXY"
            android:layout_marginLeft="28dp"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/agent_smith" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
